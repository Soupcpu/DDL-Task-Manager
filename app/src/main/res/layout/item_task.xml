<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:animateLayoutChanges="true"
    android:stateListAnimator="@animator/card_state_animator"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="16dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="2dp"
    app:strokeColor="@color/card_stroke_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@drawable/enhanced_card_background">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbTaskCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:buttonTint="@drawable/checkbox_color_selector"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTaskTitle" />

        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/text_primary"
            android:textSize="19sp"
            android:textStyle="bold"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:shadowColor="#10000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:layout_constraintEnd_toStartOf="@+id/priorityBadge"
            app:layout_constraintStart_toEndOf="@+id/cbTaskCompleted"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="完成Android项目开发" />

        <TextView
            android:id="@+id/tvTaskDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/text_secondary"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:alpha="0.9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cbTaskCompleted"
            app:layout_constraintTop_toBottomOf="@+id/tvTaskTitle"
            tools:text="完成DDL跟踪应用的实现，包括用户界面优化和功能完善" />

        <LinearLayout
            android:id="@+id/dateTimeContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/enhanced_datetime_background"
            android:padding="12dp"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cbTaskCompleted"
            app:layout_constraintTop_toBottomOf="@+id/tvTaskDescription">

            <ImageView
                android:id="@+id/ivTimeIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_time_safe"
                android:background="@drawable/icon_background"
                android:padding="3dp"
                android:contentDescription="Time icon" />

            <TextView
                android:id="@+id/tvDueDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_time_urgent"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:text="截止：12月25日 23:59" />

            <TextView
                android:id="@+id/tvTimeRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/enhanced_time_remaining_background"
                android:fontFamily="sans-serif-condensed"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                android:elevation="1dp"
                tools:text="还剩2天" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cbTaskCompleted"
            app:layout_constraintTop_toBottomOf="@+id/dateTimeContainer">

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/enhanced_category_background"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textColor="@color/category_text_color"
                android:textSize="12sp"
                android:textStyle="bold"
                android:elevation="1dp"
                tools:text="工作" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="70dp"
                android:layout_height="6dp"
                android:layout_marginEnd="10dp"
                android:progressDrawable="@drawable/enhanced_progress_drawable"
                android:max="100"
                android:elevation="1dp"
                tools:progress="70" />

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_tertiary"
                android:textSize="10sp"
                tools:text="70%" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/priorityBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/enhanced_priority_badge_background"
            android:padding="10dp"
            android:elevation="4dp"
            android:translationZ="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivPriorityIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_priority_high"
                android:background="@drawable/priority_icon_background"
                android:padding="2dp"
                android:contentDescription="Priority icon" />

            <TextView
                android:id="@+id/tvPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:textStyle="bold"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                tools:text="高" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>